@{
  Layout = "_Layout";
}

@using SocialNetwork.Models
@model List<SocialNetwork.Models.User>;

<h1>User</h1>

@if (@Model.Count == 0)
{
  <h3>No users have been added yet!</h3>
} 

@foreach (User element in Model)
{
  <li>@Html.ActionLink($"{element.UserName}", "Details", new { id = element.UserId })</li>
}

<p>@Html.ActionLink("Add new user", "Create")</p>